@using DigiAviator.Core.Models

@{
    ViewBag.Title = "Aviator's Lounge - Chat with fellow pilots";
}

     <div class="text-center">
		<h1 class="display-4">Aviator's Lounge</h1>
		<p>
			Chat with fellow pilots about anything aviation related. Keep it civil. Report misbehaviour through our contact page.
		</p>
	 </div>   

