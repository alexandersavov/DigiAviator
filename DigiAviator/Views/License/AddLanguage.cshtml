@using DigiAviator.Core.Models
@model LanguageAddViewModel

@{
	ViewData["Title"] = "Language - Add to license";
}

<div class="card card-primary">
	<div class="card-header">
		<h3 class="card-title">Language proficiency details</h3>
	</div>

	<!-- Main content -->
	<form id="addlanguage" method="post">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="card-body">
			<div class="form-group">
				<label asp-for="LanguageName">Language</label>
				<input asp-for="LanguageName" type="text" class="form-control" id="exampleInputEmail1" placeholder="Enter language" />
				<span asp-validation-for="LanguageName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="IcaoLevel">ICAO Level</label>
				<input asp-for="IcaoLevel" type="text" class="form-control" id="exampleInputEmail1" placeholder="Enter ICAO proficiency level" />
				<span asp-validation-for="IcaoLevel" class="text-danger"></span>
			</div>
            <div class="form-group">
			    <label asp-for="ValidUntil">Valid until</label>
				<input asp-for="ValidUntil" type="date" class="form-control" id="exampleInputEmail1" placeholder="Enter valid until date"/>
			    <span asp-validation-for="ValidUntil" class="text-danger"></span>
            </div>
		</div>
		<!-- /.card-body -->

		<div class="row">
			<div class="col-12">
				<input type="submit" value="Add language to license" class="btn btn-success float-right">
			</div>
		</div>
	</form>
</div>


	@section Scripts {
	<partial name="_ValidationScriptsPartial" />
	}

