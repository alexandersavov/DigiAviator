@using DigiAviator.Core.Models
@model RatingAddViewModel

@{
	ViewData["Title"] = "Rating - Add to license";
}

<div class="text-center">
	<h1 class="display-4">Add rating to license</h1>
	<p>
		Fill out the form and add a new rating to your license.
	</p>
</div>

<div class="card card-primary">
	<div class="card-header">
		<h3 class="card-title">Fitness class details</h3>
	</div>
	<form id="addrating" method="post">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="card-body">
			<div class="form-group">
				<label asp-for="ClassType">Fitness class</label>
				<select asp-for="ClassType" id="inputStatus" class="form-control custom-select">
					<option selected disabled>Select class type</option>
					<option>PPL(A)</option>
					<option>PPL(H)</option>
					<option>CPL(A)</option>
					<option>CPL(H)</option>
					<option>ATPL(A)</option>
					<option>ATPL(H)</option>
				</select>
				<span asp-validation-for="ClassType" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ValidUntil">Valid until</label>
				<input asp-for="ValidUntil" type="date" class="form-control" id="exampleInputEmail1" placeholder="Valid until" />
				<span asp-validation-for="ValidUntil" class="text-danger"></span>
			</div>
		</div>
		<!-- /.card-body -->
		<div class="row">
			<div class="col-12">
				<input type="submit" value="Add rating class to license" class="btn btn-success float-right">
			</div>
		</div>
	</form>
	</div>

	@section Scripts {
	<partial name="_ValidationScriptsPartial" />
	}
