@using DigiAviator.Infrastructure.Data.Models.Identity
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>@ViewData["Title"]</title>

	<!-- Google Font: Source Sans Pro -->
	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
	<!-- Font Awesome Icons -->
	<link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
	<!-- Theme style -->
	<link rel="stylesheet" href="~/css/adminlte.min.css">
	<!-- Site css -->
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

	@RenderSection("Styles", false)
	@await RenderSectionAsync("Head", false)
</head>
<body class="hold-transition layout-top-nav">
	<div class="wrapper">

		<!-- Navbar -->
		<nav class="main-header navbar navbar-expand-md navbar-light navbar-white">
			<div class="container">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
					<img src="~/img/DigiAviatorLogo.png" alt="DigiAviator Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
					<span class="brand-text font-weight-light">Digital Aviator</span>
				</a>

				<button class="navbar-toggler order-1" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse order-3" id="navbarCollapse">
					<!-- Left navbar links -->
					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
						</li>
						@if (SignInManager.IsSignedIn(User))
						{
							<!-- LOGBOOK -->
							<li class="nav-item dropdown">
								<a id="dropdownSubMenu1" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="nav-link dropdown-toggle">Logbook</a>
								<ul aria-labelledby="dropdownSubMenu1" class="dropdown-menu border-0 shadow">
									<li><a class="dropdown-item" asp-area="" asp-controller="Logbook" asp-action="Instructions">Instructions</a></li>
									<li><a class="dropdown-item" asp-area="" asp-controller="Logbook" asp-action="Overview">Overview</a></li>
									<li><a class="dropdown-item" asp-area="" asp-controller="Logbook" asp-action="Add">Add Logbook</a></li>
								</ul>
							</li>
							<!-- LICENSE -->
							<li class="nav-item dropdown">
								<a id="dropdownSubMenu1" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="nav-link dropdown-toggle">License</a>
								<ul aria-labelledby="dropdownSubMenu1" class="dropdown-menu border-0 shadow">
									<li><a class="dropdown-item" asp-area="" asp-controller="License" asp-action="Overview">Overview</a></li>
									<li><a class="dropdown-item" asp-area="" asp-controller="License" asp-action="Add">Add License</a></li>
								</ul>
							</li>
							<!-- MEDICAL -->
							<li class="nav-item dropdown">
								<a id="dropdownSubMenu1" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="nav-link dropdown-toggle">Medical</a>
								<ul aria-labelledby="dropdownSubMenu1" class="dropdown-menu border-0 shadow">
									<li><a class="dropdown-item" asp-area="" asp-controller="Medical" asp-action="Overview">Overview</a></li>
									<li><a class="dropdown-item" asp-area="" asp-controller="Medical" asp-action="Add">Add Medical</a></li>
								</ul>
							</li>
							<!-- FLIGHT PREPARATION -->
							<li class="nav-item dropdown">
								<a id="dropdownSubMenu1" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="nav-link dropdown-toggle">Flight Preparation</a>
								<ul aria-labelledby="dropdownSubMenu1" class="dropdown-menu border-0 shadow">
									<li><a class="dropdown-item" asp-area="" asp-controller="FlightPreparation" asp-action="AirspaceMap">Airspace Map</a></li>
									<li><a class="dropdown-item" asp-area="" asp-controller="FlightPreparation" asp-action="WeightAndBalance">Weight and balance</a></li>
									<li><a href="#" class="dropdown-item">Performance </a></li>
								</ul>
							</li>
							<!-- AIRPORTS -->
							<li class="nav-item dropdown">
								<a id="dropdownSubMenu1" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="nav-link dropdown-toggle">Airports</a>
								<ul aria-labelledby="dropdownSubMenu1" class="dropdown-menu border-0 shadow">
									<li><a class="dropdown-item" asp-area="" asp-controller="Airport" asp-action="Overview">Overview </a></li>
									<li><a class="dropdown-item" asp-area="" asp-controller="Airport" asp-action="Add">Add Airport </a></li>
								</ul>
							</li>
							<!-- CHAT -->
							<li class="nav-item">
								<a class="nav-link" asp-area="" asp-controller="AviatorLounge" asp-action="AviatorLounge">Chat</a>
							</li>
							<!-- LOUGOUT -->
							<li class="nav-item">
							<form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area="", controller="Home", action="Index" })" method="post">
								<button type="submit" class="nav-link btn btn-link">Logout</button>
							</form>
							</li>
						}
					</ul>
				</div>						
			</div>
		</nav>
		<!-- /.navbar -->
		<!-- Content Wrapper. Contains page content -->
		<div class="content-wrapper">

			<!-- Main content -->
			<div class="content">
				<div class="container">
					@RenderBody()
				</div><!-- /.container-fluid -->
			</div>
			<!-- /.content -->
		</div>
		<!-- /.content-wrapper -->
		<!-- Control Sidebar -->
		<aside class="control-sidebar control-sidebar-dark">
			<!-- Control sidebar content goes here -->
		</aside>
		<!-- /.control-sidebar -->
		<!-- Main Footer -->
		<footer class="main-footer">
			<!-- To the right -->
			<div class="float-right d-none d-sm-inline">
				DISCLAIMER: NOT TO BE USED FOR REAL WORLD FLYING. Always consult your instructor and comply with local regulations.
			</div>
			<!-- Default to the left -->
			<strong>Copyright &copy; 2022 <a href="https://adminlte.io">Digital aviator</a>.</strong> All rights reserved.
		</footer>
	</div>
	<!-- ./wrapper -->
	<!-- REQUIRED SCRIPTS -->
	<!-- jQuery -->
	<script src="~/plugins/jquery/jquery.min.js"></script>
	<!-- Bootstrap 4 -->
	<script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
	<!-- AdminLTE App -->
	<script src="~/js/adminlte.min.js"></script>
	@await RenderSectionAsync("Scripts", false)
</body>
</html>

